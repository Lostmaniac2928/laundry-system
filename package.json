{
  "name": "laundromat-management",
  "version": "1.0.0",
  "scripts": {
    "start": "npm install --prefix server && node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix server && cd client && npm install && npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}